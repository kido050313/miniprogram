/* miniprogram/pages/musiclist/musiclist.wxss */
.detail-container{
  height: 320rpx;
  opacity: 0.4;
  filter: blur(40rpx)
}
.detail-mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  z-index: -1; 
}
.detail-info{
  position: absolute;
   width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  z-index: 1;
}
.detail-img{
  width: 280rpx;
  height: 280rpx;
  border-radius: 6rpx;
  margin-right: 24rpx;
}
.detail {
  flex-grow: 1;
  width: 0;
  line-height: 60rpx;
}
.detail-name {
  color: #fff;
  font-size: 24rpx;
}
