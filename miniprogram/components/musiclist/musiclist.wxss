/* components/musiclist/musiclist.wxss */
.musiclist-container{
  display: flex;
  align-items: center;
  padding: 14rpx 20rpx;
  box-sizing: border-box;
}
.musiclist-index {
  width: 80rpx;
  font-size: 34rpx;
  color: #888;
}
.musiclist-info {
  flex-grow: 1;
  width: 0;  
}
.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}
.musiclist-alia {
  color: #888;
}
.musiclist-singer {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #888;
}
.playing view, .playing text {
  color: #d43c33;
}